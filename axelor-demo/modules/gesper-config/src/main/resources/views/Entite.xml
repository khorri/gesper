<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">

    <grid name="entite-grid" title="Entités" model="com.axelor.config.db.Entite"  canEdit="true" canDelete="true" edit-icon="true">
        <field name="shortName"/>
        <field name="name"/>
        <field name="parent"/>
        <field name="type"/>
        <field name="caida"/>
        <field name="organigrame"/>
        <field name="organigrameOfficiel"/>

    </grid>

    <form name="entite-form" title="Entité" model="com.axelor.config.db.Entite">
        <panel name="entite" title="Entité">
            <field name="shortName"/>
            <field name="name"/>
            <field name="parent"/>
            <field name="type" canNew="true"/>
            <field name="caida"/>
            <field name="organigrame"/>
            <field name="organigrameOfficiel"/>
        </panel>
    </form>

</object-views>