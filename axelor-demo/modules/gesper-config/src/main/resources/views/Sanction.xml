<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">

    <grid name="sanction-grid" title="Sanction"
          model="com.axelor.config.db.Sanction">
        <field name="dateEffet" title="Date d'effet" />
        <field name="periodeSanction" title="Periode d Sanction (nombre de jours)"/>
        <field name="natureSanction" title="Nature de Sanction"/>
        <field name="motifSanction"  title="Motif de Sanction"/>
        <field name="gradeSanction"  title="Grade "/>
        <field name="echelonSanction"  title="Echelon "/>




    </grid>
    <selection name="sanction.natureSanction">
        <option value="avertissement">Avertissement</option>
        <option value="blame">Blame</option>
        <option value="degradation">Degradation</option>
        <option value="revocation">Revocation</option>
        <option value="miseapied">Mise a Pied</option>
        <option value="miseengard">Mise en Gard</option>
        <option value="rappelalordre">Rappel a l'ordre</option>
        <option value="suspensiondetraitement">Suspension de Traitement</option>
        <option value="defalcation">Defalcation</option>





    </selection>
    <form name="sanction-form" title="Sanction"
          model="com.axelor.config.db.Sanction">
        <panel title="Overview">
            <field name="dateEffet" title="Date d'effet" />
            <field name="periodeSanction" />
            <field name="natureSanction" selection="sanction.natureSanction" />
            <field name="motifSanction"  />
            <field name="gradeSanction"  />
            <field name="echelonSanction"  />


        </panel>

    </form>

</object-views>